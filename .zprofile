#!/bin/bash

# zsh profile file. This file will be loaded when you log in.

# Adds ~/.local/bin to $PATH. This will help you run scripts which are in that folder anywhere without writing whole path.
export PATH="$HOME/.local/bin:$PATH"

# Default program.
export EDITOR="nvim"
export TERMINAL="st"
export BROWSER="qutebrowser"

# Some default config directories
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_RUNTIME_DIR="$HOME/.cache"
export VIMINIT=":source $XDG_CONFIG_HOME"/vim/vimrc
export GTK2_RC_FILES="${XDG_CONFIG_HOME:-$HOME/.config}/gtk-2.0/gtkrc-2.0"
export LESSHISTFILE="-"
export WGETRC="${XDG_CONFIG_HOME:-$HOME/.config}/wget/wgetrc"
export ZDOTDIR="${XDG_CONFIG_HOME:-$HOME/.config}/zsh"
export GOPATH="${XDG_DATA_HOME:-$HOME/.local/share}/go"

# Others
export GTK_IM_MODULE=ibus
export XMODIFIERS=@im=ibus
export QT_IM_MODULE=ibus
export MOZ_USE_XINPUT2="1"
export _JAVA_AWT_WM_NONREPARENTING=1

